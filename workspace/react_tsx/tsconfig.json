{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths" : {
      "@utils/*":["utils/*"] 
    },
    "outDir": "./esm/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2017",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}